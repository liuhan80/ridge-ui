{
  "name": "ridge-community-server",
  "version": "1.1.0",
  "description": "Ridge Server",
  "main": "boot.js",
  "scripts": {
    "dev": "node ./dev.js",
    "start": "node ./boot.js",
     "copy-workspaces": "for pkg in $(ls packages); do (cd packages/$pkg && npm pack && mv *.tgz ../../); done && npm install *.tgz && rm *.tgz"
  },
  "files": [
    "src"
  ],
  "workspaces": [
    "packages/*"
  ],
  "license": "ISC",
  "dependencies": {
    "ridge-boot": "^1.0.0",
    "ridge-http": "^1.0.0",
    "ridge-npm-service": "^1.0.0"
  }
}
