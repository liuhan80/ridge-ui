{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RidgeX",
  "version": "0.1.4",
  "identifier": "com.ridgeui.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "RidgeX",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
         "default-src": "* 'unsafe-inline' 'unsafe-eval'",
         "connect-src": "* 'unsafe-inline' 'unsafe-eval'",
         "font-src": " * 'unsafe-inline' 'unsafe-eval' data:",
         "script-src": "* 'unsafe-inline' http https  'unsafe-eval'",
         "script-src-elem": "* 'unsafe-inline' http https 'unsafe-eval'",
         "img-src": "'self' data: blob: https: http: ridgeui.com *.ridgeui.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
